# 避免類型定義衝突
auto-install-peers=true
dedupe-peer-dependents=true

# 確保一致的node版本
node-version=>=18.0.0

# 避免重複安裝
prefer-workspace-packages=true

# 允許原生模組建置
ignore-scripts=false
enable-pre-post-scripts=true

# 確保原生模組正確安裝
side-effects-cache=false

# 允許原生模組建置
unsafe-perm=true

# 強制重建原生模組
force=true

# 設置目標平台
target_platform=linux
target_arch=x64

# lightningcss 特定配置
build-from-source=true 